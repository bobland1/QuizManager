@using HtmlHelpers.BeginCollectionItemCore;
@model Answer

<div class="answerRow mt-1">
    @using (Html.BeginCollectionItem("Answers"))
    {
        @Html.HiddenFor(model => model.Id)
        <div class="row col-md-7 mx-auto">
            <div class="col-md-7 mr-3">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
            <div class="mr-3">
                @Html.LabelFor(model => model.IsCorrect, "Correct?")
                @Html.CheckBoxFor(model => model.IsCorrect)
            </div>
            <a href="#" class="deleteAnswerRow">
                <img src="~/img/deleteSmall.png" height="20" width="20" />
            </a>
        </div>
    }
</div>
